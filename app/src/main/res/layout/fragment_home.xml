<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Kontainer Utama yang Dapat Digulir (Semua konten Home) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/home_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- Catatan: Di sini tidak perlu constraint ke bottom_navigation karena Fragment host akan menanganinya. -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Search Bar -->
            <EditText
                android:id="@+id/search_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:padding="8dp"
                android:hint="Search"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:background="@drawable/rounded_search_background"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Recommendation Banner -->
            <ImageView
                android:id="@+id/recommendation_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner1"
                android:contentDescription="Rekomendasi Banner"
                app:layout_constraintTop_toBottomOf="@id/search_bar" />

            <!-- Text Rekomendasi di atas Banner -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekomendasi"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@id/recommendation_banner"
                app:layout_constraintStart_toStartOf="@id/recommendation_banner" />

            <!-- Judul Kategori -->
            <TextView
                android:id="@+id/title_category_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recommendation_banner" />

            <!-- Ikon Arrow Kategori -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Lihat Semua Kategori"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/title_category_1"
                app:layout_constraintTop_toTopOf="@id/title_category_1"
                app:layout_constraintBottom_toBottomOf="@id/title_category_1" />

            <!-- RecyclerView Kategori Horizontal -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/category_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/title_category_1"
                tools:itemCount="4"
                tools:listitem="@layout/item_category" />

            <!-- Judul Produk Rekomendasi -->
            <TextView
                android:id="@+id/title_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekomendasi"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_recycler_view" />

            <!-- Ikon Arrow Produk -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Lihat Semua Produk"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/title_products"
                app:layout_constraintTop_toTopOf="@id/title_products"
                app:layout_constraintBottom_toBottomOf="@id/title_products" />

            <!-- RecyclerView Produk Grid (2 kolom) -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/products_grid_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                app:layout_constraintTop_toBottomOf="@id/title_products"
                tools:itemCount="4"
                tools:listitem="@layout/item_product_grid" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>