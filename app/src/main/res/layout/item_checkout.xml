<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- FOTO PRODUK -->
    <ImageView
        android:id="@+id/imageProduk"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

    <!-- BRAND + NAMA + JUMLAH -->
    <LinearLayout
        android:id="@+id/layoutDetail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imageProduk"
        app:layout_constraintTop_toTopOf="@id/imageProduk"
        app:layout_constraintBottom_toBottomOf="@id/imageProduk"
        app:layout_constraintEnd_toStartOf="@+id/textHarga">

        <TextView
            android:id="@+id/textBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textNamaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah : 1"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- HARGA -->
    <TextView
        android:id="@+id/textHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.000"
        android:textStyle="bold"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageProduk"
        app:layout_constraintBottom_toBottomOf="@id/imageProduk"/>

</androidx.constraintlayout.widget.ConstraintLayout>
