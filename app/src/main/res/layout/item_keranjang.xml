<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgProduk"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/sample1" />

    <TextView
        android:id="@+id/txtBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brand"
        android:textSize="12sp"
        android:textColor="#8A8A8A"
        app:layout_constraintStart_toEndOf="@id/imgProduk"
        app:layout_constraintTop_toTopOf="@id/imgProduk"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/txtNamaProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama produk"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txtBrand"
        app:layout_constraintTop_toBottomOf="@id/txtBrand" />

    <TextView
        android:id="@+id/txtHarga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.10.000"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txtNamaProduk"
        app:layout_constraintStart_toStartOf="@id/txtNamaProduk" />

    <!-- Checkbox -->
    <CheckBox
        android:id="@+id/cbPilih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imgProduk"
        app:layout_constraintStart_toStartOf="@id/txtNamaProduk" />

    <!-- Counter -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/imgProduk"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnMinus"
            android:src="@drawable/ic_minus"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:id="@+id/txtJumlah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:padding="8dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btnPlus"
            android:src="@drawable/ic_plus"
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
